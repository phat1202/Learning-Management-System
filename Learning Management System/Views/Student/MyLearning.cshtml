@model List<Learning_Management_System.Models.Enrollment>
@inject LmsDbContext db
@* Index Course Management *@
<!-- Category Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-5">
            <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Subjects</h5>
            <h1>My WishList</h1>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                var NumberStudent = db.Enrollments.Count(student => student.CourseId == item.CourseId);
                @* var myTeacher = db.Enrollments.First(t => t.course.CourseId == ); *@
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="rounded overflow-hidden mb-2">
                        <img id="img-course" src="@item.course.ImageCover" alt="">
                        <div class="bg-secondary p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <small class="m-0">@* <i class="far fa-clock text-primary mr-2"></i>*@<i class="bi bi-person"></i>Teacher: @item.course.Teacher.UserName</small>
                                <small class="m-0"><i class="fa fa-users text-primary mr-2"></i>@NumberStudent</small>
                            </div>
                            <a asp-action="StudentCourse" asp-controller="Student" asp-route-courseId="@item.course.CourseId" class="h5">@item.course.CourseTitle</a>
                            @*                             <br>
                        <a id="teacherName" href="">Teacher: @item.Teacher.UserName</a> *@
                            <div class="border-top mt-4 pt-4">
                                <div class="d-flex justify-content-between">
                                    <h6 class="m-0"><i class="fa fa-star text-primary mr-2"></i>4.5 <small>(250)</small></h6>
                                    <h5 class="m-0">$99</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
