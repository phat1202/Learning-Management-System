@model List<Learning_Management_System.Models.Course>
@{
    ViewData["Title"] = "Our Teachers";
}

<!-- Team Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-5">
            <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Teachers</h5>
            <h1>Meet Our Teachers</h1>
            @if(User.IsInRole("Teacher"))
            {
                <h5 class="text-primary"><a asp-action="MyClasses" asp-controller="Teacher">Create a course</a></h5>
            }
            else
            {
                <h5 class="text-primary"><a asp-action="BecomeTeacher" asp-controller="Teacher">Join with us</a></h5>
            }
        </div>
        <div class="row">
            @foreach (var item in Model.GroupBy(u => u.Teacher.UserId))
            {
                var result = item.First();
                <div class="col-md-6 col-lg-3 text-center team mb-4">
                    <div class="team-item rounded overflow-hidden mb-2">
                        <div class="team-img position-relative">
                            <img id="img-teacher-poster" src="@result.Teacher.Avatar" alt="">
                            <div class="team-social">
                                <a class="btn btn-outline-light btn-square mx-1" href="#"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-outline-light btn-square mx-1" href="#"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-outline-light btn-square mx-1" href="#"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                        <div class="bg-secondary p-4">
                            <h5>@result.Teacher.UserName</h5>
                            <p class="m-0">@result.Category.CategoryName</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
