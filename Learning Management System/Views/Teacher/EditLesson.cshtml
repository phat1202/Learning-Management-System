@model Learning_Management_System.Models.Lesson

<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;"></h5>
            <h1>Edit Lesson</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-form bg-secondary rounded p-5">
                    <form enctype="multipart/form-data" asp-action="EditLesson" asp-controller="Teacher">
                        <div class="form-group" hidden>
                            <label for="exampleInputEmail1">Lesson Name</label>
                            <input asp-for="LessonId" type="text" class="form-control" id="name" value="@Model.LessonId" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Lesson Name</label>
                            <input asp-for="LessonName" type="text" class="form-control" id="name" placeholder="Lesson Name" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Lesson Number</label>
                            <input asp-for="LessonNumber" type="number" class="form-control" id="name" placeholder="Lesson Number" required="required" />
                        </div>
                        <div class="form-group">
                            <label>Upload Cover Image</label>
                            <input id="imageCover" name="Video" type="file" class="form-control" placeholder="Upload Image" />
                            <span>Skip this step if there is nothing need changing.</span>
                        </div>
                        <span class="alert-danger">@Html.ValidationSummary()</span>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <button type="submit" class="btn btn-primary">Finish</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
