@model Learning_Management_System.Models.Chapter


<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;"></h5>
            <h1>Create New Chapter</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-form bg-secondary rounded p-5">
                    <form enctype="multipart/form-data" asp-action="CreateNewChapter" asp-controller="Teacher">
@*                         <div class="form-group" hidden>
                            <label for="exampleInputEmail1"></label>
                            <input asp-for="CourseId" type="text" class="form-control" value="@Model.CourseId" />
                        </div> *@
                        <div class="form-group">
                            <label for="exampleInputEmail1">Chapter Title</label>
                            <input asp-for="ChapterTitle" type="text" class="form-control" id="name" placeholder="Chapter Title" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Number of Lessons</label>
                            <input asp-for="TotalNumberOfLesson" type="number" class="form-control" placeholder="How many lessons?" required="required"></input>
                        </div>
                        <span class="alert-danger">@Html.ValidationSummary()</span>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <button type="submit" class="btn btn-primary">Next</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>