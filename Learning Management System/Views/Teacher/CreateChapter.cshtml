@model Learning_Management_System.Models.Chapter

@{
    ViewData["Title"] = "CreateChapter";
}

<h1>CreateChapter</h1>

<h4>Chapter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateChapter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChapterNumber" class="control-label"></label>
                <input asp-for="ChapterNumber" class="form-control" />
