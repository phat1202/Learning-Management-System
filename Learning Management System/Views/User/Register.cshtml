@using static Learning_Management_System.Models.EnumClass;
@model Learning_Management_System.Repositories.AccountRepository.RegisterModel

<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;"></h5>
            <h1>Register</h1>
            <a asp-action="Login" asp-controller="User">I've already had account</a>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-form bg-secondary rounded p-5">
                    <div id="success"></div>
                    <form asp-action="Register" novalidate="novalidate">
                        <div class="control-group">
                            <input asp-for="UserName" type="text" class="form-control border-0 p-4" id="name" placeholder="Your Name" required="required" data-validation-required-message="Please enter your name" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input asp-for="Email" type="email" class="form-control border-0 p-4" id="email" placeholder="Your Email" required="required" data-validation-required-message="Please enter your email" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input asp-for="Password" type="password" class="form-control border-0 p-4" id="subject" placeholder="Password" required="required" data-validation-required-message="Please enter password" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <input asp-for="ConfirmPassword" type="password" class="form-control border-0 p-4" id="subject" placeholder="Confirm Password" required="required" data-validation-required-message="Please confirm password" />
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="control-group">
                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control border-0 p-2">
                                <option>Select Gender</option>
                            </select>
                        </div>
                        <br />
                        <div class="text-center">
                            <button class="btn btn-primary py-3 px-5" type="submit" id="sendMessageButton">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->