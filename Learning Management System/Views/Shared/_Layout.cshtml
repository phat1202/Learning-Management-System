@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    // var userName = @UserManager.Users.First();
    var _signInManager = SignInManager.IsSignedIn(User);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Learning_Management_System.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
@*                         <li class="nav-item">
                            <select class="nav-link text-dark">
                                <option class="form-control" value="" disabled selected>Select Category</option>
                                <option class="form-control" value="category1">Category 1</option>
                                <option class="form-control" value="category2">Category 2</option>
                                <option class="form-control" value="category3">Category 3</option>
                            </select>
                        </li>
                        <li class="nav-item">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for anything">
                            </div>
                        </li> *@
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="manage" class="nav-link text-dark" asp-controller="User" asp-action="" title="Manage">My Learning</a>
                        </li>
                        @if(_signInManager == true)
                        {
                            if (UserManager.Users.First(u => u.Id == User.Claims.First().Value).IsTeacher == true)
                            {
                                <li class="nav-item">
                                    <a id="manage" class="nav-link text-dark" asp-route-userId="@User.Claims.First().Value" asp-controller="Teacher" asp-action="MyClass" title="Manage">My Courses</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a id="manage" class="nav-link text-dark" asp-controller="Home" asp-action="BecomeTeacher" title="Manage">Become Teacher</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a id="manage" class="nav-link text-dark" asp-controller="Home" asp-action="BecomeTeacher" title="Manage">Become Teacher</a>
                            </li>
                        }

                        @*
                        <li class="nav-item">
                        <a class="nav-link text-dark" id="login" asp-controller="Identity" asp-action="Login">Log In</a>
                        </li> *@
                    </ul>

                    <ul class="navbar-nav">
                        @if (_signInManager == true)
                        {
                            <li class="nav-item">
                                <a id="manage" class="nav-link text-dark" title="Manage">Hello @UserManager.Users.First(u => u.Id == User.Claims.First().Value).Name!</a>
                            </li>
                            <li class="nav-item">
                                <form id="logoutForm" class="form-inline" asp-controller="Identity" asp-action="Logout"  >
                                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" id="register" asp-controller="Identity" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" id="login" asp-controller="Identity" asp-action="Login">Log In</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*     <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - LMS- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
